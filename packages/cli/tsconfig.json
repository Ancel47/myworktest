{
    "include": [
        "src"
    ],
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "strict": true,
        "paths": {
            "@definitions/*": [
                "src/definitions/*"
            ],
            "@definitions": [
                "src/definitions"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@utils": [
                "src/utils"
            ],
        },
        "typeRoots": [
            "./src/types",
            "../../node_modules/@types"
        ]
    }
}
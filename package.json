{
    "version": "0.1.0",
    "license": "MIT",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "lerna": "lerna",
        "start": "lerna run start --stream --parallel",
        "test": "lerna run test --",
        "lint": "lerna run lint",
        "lint:fix": "lerna run lint:fix",
        "build": "lerna run build"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "lerna run lint:fix --"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:fix"
        }
    },
    "prettier": {
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 80,
        "tabWidth": 4
    },
    "name": "readmin",
    "author": "Pankod",
    "module": "dist/tsdx.esm.js",
    "devDependencies": {
        "@types/react": "^17.0.1",
        "@types/react-dom": "^17.0.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.1",
        "tsdx": "^0.14.1",
        "typescript": "^3.9.8"
    },
    "workspaces": [
        "packages/*"
    ]

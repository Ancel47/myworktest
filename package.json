{
    "version": "0.1.0",
    "license": "MIT",
    "private": false,
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "lerna": "lerna",
        "start": "lerna run start --stream --parallel",
        "test": "lerna run test --stream --parallel",
        "test:coverage": "jest --runInBand --silent --ci --coverage",
        "lint": "tsdx lint packages example",
        "lint:fix": "npm run lint -- packages example examples --quiet --fix --allow-empty",
        "build": "lerna run build",
        "bootstrap:docker": "lerna bootstrap -- --production --no-optional"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint:fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "prettier": {
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 80,
        "tabWidth": 4
    },
    "name": "refinejs-repo",
    "author": "Pankod",
    "devDependencies": {
        "@types/react": "^17.0.1",
        "@types/react-dom": "^17.0.0",
        "eslint": "^7.11.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "jest": "^26.6.0",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.1",
        "tsdx": "^0.14.1",
        "typescript": "^3.9.8"
    }
}
